@LOGDIR@/*.log {
    missingok
    sharedscripts
    delaycompress
    su @MMUSER@ @MMGROUP@
    postrotate
        systemctl -q is-active mailman3     && systemctl reload  mailman3
        systemctl -q is-active mailman3     && runuser -u @MMUSER@ @BINDIR@/mailman reopen >/dev/null
        systemctl -q is-active mailman3-web && systemctl restart mailman3-web
    endscript
}
